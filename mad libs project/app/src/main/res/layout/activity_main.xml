<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D4CBC4"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:src="@drawable/background" />

        <ImageView
            android:id="@+id/music_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:src="@drawable/theme" />

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/music_image_view"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:padding="0dp"
            android:text="THE MUSIC ROOM"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/loc_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_text_view"
            android:fontFamily="sans-serif"
            android:padding="20dp"
            android:text="Music expresses that which cannot be said and on which it is impossible to be silent."
            android:textAlignment="center"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/loc_text_view"
            android:padding="10dp"
            android:text="Music gives a soul to the universe, wings to the mind, flights to imaginations, And life to everything.So come and JOIN our MUSIC ROOM to learn and create something beautiful " />

        <TextView
            android:id="@+id/detail2_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about"
            android:fontFamily="sans-serif-medium"
            android:text=" Our Music Teacher is qualified from Berclay School Of Music\n In styles that include \nJazz, Rock,Electronic,Punk Rock,Indie\n The Music Room offers all of these styles to you if you have that passion to create music.We can make that happen!!"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/detail1_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:text="For More Information Contact \nHarry Bhatia 8146007474 \n site details: https://www.themusicroom.com"
            android:textSize="16sp" />

    </RelativeLayout>
</ScrollView>